<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.l_0k.germes.ActivityTaskStatus">

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/radioGroupTasStatus">

        <RadioButton
            android:id="@+id/radioButtonDelivering"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:background="@drawable/task_button_green"
            android:checked="true"
            android:drawableRight="@drawable/car_blue70"
            android:layout_marginBottom="5dp"
            android:text="@string/Delivering"
            android:textSize="20dp"
            android:gravity="center"
            android:padding="10dp" />

        <RadioButton
            android:id="@+id/radioButtonDriverRefused"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/task_button_red"
            android:drawableRight="@drawable/car_blue70"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:text="@string/DriverRefused"
            android:textSize="20dp"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/radioButtonDelivered"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/task_button_green"
            android:drawableRight="@drawable/customer_blue70"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:text="@string/Delivered"
            android:textSize="20dp"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/radioButtonCustomerRefused"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/task_button_red"
            android:drawableRight="@drawable/customer_blue70"
            android:padding="10dp"
            android:text="@string/CustomerRefused"
            android:textSize="20dp"
            android:gravity="center" />

    </RadioGroup>
</RelativeLayout>
