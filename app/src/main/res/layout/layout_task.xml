<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/task_gradient"
    android:layout_marginTop="5dp"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Task ID"
            android:textSize="20sp"
            android:maxLines="1">
        </TextView>
        <TextView
            android:id="@+id/textViewDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="10dp"
            android:text="00.00.00 00:00:00 - 00.00.00 00:00:00"
            android:maxLines="1">
        </TextView>
        <TextView
            android:id="@+id/textPhoneAndAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="10dp"
            android:text="Address"
            android:maxLines="1">
        </TextView>
        <TextView
            android:id="@+id/textViewGoods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="10dp"
            android:text="Good1;Good2;..."
            android:maxLines="1">
        </TextView>
    </LinearLayout>
    <ImageButton
        android:id="@+id/imageViewTaskStatus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/car_blue70"
        android:contentDescription="@string/Status"
        android:layout_gravity="center"
        android:adjustViewBounds="false"
        android:layout_margin="10dp"
        android:background="@drawable/task_button_green"
        android:onClick="onClickImageViewTaskStatus"/>
</LinearLayout>